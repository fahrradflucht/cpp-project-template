{
  "version": 6,
  "include": [
    "linux-base.json"
  ],
  "configurePresets": [
    {
      "name": "linux-gcc-static",
      "inherits": "linux-base",
      "displayName": "linux gcc static libs",
      "environment": {
        "CC": "gcc",
        "CXX": "g++"
      },
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux"
      }
    },
    {
      "name": "linux-gcc-dynamic",
      "inherits": "linux-gcc-static",
      "displayName": "linux gcc dynamic libs",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": true,
        "VCPKG_TARGET_TRIPLET": "x64-linux-dynamic"
      }
    },
    {
      "name": "linux-gcc",
      "inherits": "linux-gcc-dynamic",
      "displayName": "alias to linux-gcc-dynamic"
    }
  ],
  "buildPresets": [
    {
      "name": "linux-gcc-static",
      "inherits": "linux-base",
      "configurePreset": "linux-gcc-static"
    },
    {
      "name": "linux-gcc-dynamic",
      "inherits": "linux-base",
      "configurePreset": "linux-gcc-dynamic"
    },
    {
      "name": "linux-gcc",
      "inherits": "linux-gcc-dynamic",
      "configurePreset": "linux-gcc"
    }
  ],
  "testPresets": [
    {
      "name": "linux-gcc-static",
      "inherits": "linux-base",
      "configurePreset": "linux-gcc-static"
    },
    {
      "name": "linux-gcc-dynamic",
      "inherits": "linux-base",
      "configurePreset": "linux-gcc-dynamic"
    },
    {
      "name": "linux-gcc",
      "inherits": "linux-gcc-dynamic",
      "configurePreset": "linux-gcc"
    }
  ],
  "workflowPresets": [
    {
      "name": "linux-gcc-static",
      "steps": [
        {
          "type": "configure",
          "name": "linux-gcc-static"
        },
        {
          "type": "build",
          "name": "linux-gcc-static"
        },
        {
          "type": "test",
          "name": "linux-gcc-static"
        }
      ]
    },
    {
      "name": "linux-gcc-dynamic",
      "steps": [
        {
          "type": "configure",
          "name": "linux-gcc-dynamic"
        },
        {
          "type": "build",
          "name": "linux-gcc-dynamic"
        },
        {
          "type": "test",
          "name": "linux-gcc-dynamic"
        }
      ]
    },
    {
      "name": "linux-gcc",
      "steps": [
        {
          "type": "configure",
          "name": "linux-gcc"
        },
        {
          "type": "build",
          "name": "linux-gcc"
        },
        {
          "type": "test",
          "name": "linux-gcc"
        }
      ]
    }
  ]
}
